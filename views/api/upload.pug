extends ../layout

block content
  .page-header
    h2
      i.fa.fa-upload
      | Video Upload

  .row
    form(role='form', enctype='multipart/form-data', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label.col-sm-3.control-label(for='email') Title
        .col-sm-7
          input.form-control(type='title', name='title', id='title', placeholder='Title', autofocus, required)
      .form-group
        label.col-sm-3.control-label(for='email') Keywords
        .col-sm-7
          input.form-control(type='keywords', name='keywords', id='keywords', placeholder='Keywords separated with comma', autofocus)
      hr
      .form-group.text-center
          .col-sm-7.text-center
            input(type='file', name='myFile')
            button.btn.btn-primary(type='submit') Submit
